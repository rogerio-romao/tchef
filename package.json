{
    "name": "tchef",
    "version": "0.0.9",
    "description": "A better Fetch - with bells and whistles",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --fix --ext .ts src",
        "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --target=es2022 --minify --sourcemap",
        "check": "run-s lint test:ci build",
        "serve": "json-server ./src/server/db.json --port 3000",
        "bump": "npx changelogen@latest --bump",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "test:local": "run-p serve test",
        "test:ci": "vitest --run",
        "start": "node dist/index.js",
        "dev:tsc": "tsc --watch --preserveWatchOutput --noEmit",
        "dev:node": "node --watch dist/index.js",
        "dev:esbuild": "pnpm run build --watch",
        "dev": "run-p dev:*"
    },
    "author": "Rogerio Romao",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^1.6.0",
        "@vitest/ui": "^1.6.0",
        "esbuild": "^0.20.1",
        "eslint": "^8.56.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^0.25.0",
        "eslint-plugin-unicorn": "^52.0.0",
        "npm-run-all2": "^6.1.2",
        "typescript": "^5.3.3",
        "vitest": "^1.3.0"
    },
    "dependencies": {
        "consola": "^3.2.3",
        "json-server": "1.0.0-alpha.23"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rogerio-romao/tchef"
    },
    "keywords": [
        "fetch",
        "http",
        "request",
        "response",
        "tchef"
    ],
    "engines": {
        "node": ">=21.0.0"
    }
}
